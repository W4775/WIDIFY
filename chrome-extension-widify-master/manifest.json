{
    "manifest_version": 3,
    "name": "Widify",
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "19": "images/icon19.png",
            "38": "images/icon38.png",	
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
		"default_title": "Widify",
    "default_popup": "popup.html"
    },
	 "icons": {
            "16": "images/icon16.png",
            "19": "images/icon19.png",
            "38": "images/icon38.png",	
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
    "version": "0.1.0",
    "description": "Use all the space!",
  "permissions": [
    "scripting",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.gamestop.com/*",
    "*://*.github.com/*",
    "*://*.reddit.com/*",
    "*://*.slickdeals.net/*",
    "*://*.target.com/*",
    "*://*.walmart.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }


}
